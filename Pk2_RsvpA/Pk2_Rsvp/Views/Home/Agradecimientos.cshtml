@model Pk2_Rsvp.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agradecimientos</title>
</head>
<body>

    @{
        try{
            WebMail.SmtpServer = "smtp.gmail.com";
            WebMail.SmtpPort = 587;
            WebMail.EnableSsl = true;
            WebMail.UserName = "linetguevaracruz@gmail.com";
            WebMail.Password = "elpasado";
            WebMail.From = "linetguevaracruz@gmail.com";

            WebMail.Send("linetguevaracruz@gmail.com", "Notificación RSVP",
                Model.Name + ((Model.WillAttend ?? false) ? "" : "no") +
            "Atendera");
        }
        catch(Exception){
            @:<b>Error: No se pudo enviar el correo confirmar</b>
        }
        
    }
    
    <div>
        <h1> Gracias, @Model.Name!! </h1>
        @if(Model.WillAttend == true)
        {
            @: Que bueno que vendras!!!!
        }
        else 
        {
            @: Lamento mucho no puedas venir....
        }
    </div>
</body>
</html>
